@model FristApp.Models.State

@{
    ViewData["Title"] = "AddorEdit";
}

<h1>AddorEdit</h1>

<h4>State</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddorEdit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StateName" class="control-label"></label>
                <input asp-for="StateName" class="form-control" />
                <span asp-validation-for="StateName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Country List</label>
                <select asp-for="countryId" asp-items="@(ViewBag.CountryId)" class="form-control">
                    <option selected>Please Select Country</option>
                </select>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="AddorEdit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div><br />

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
